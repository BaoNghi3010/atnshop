<!DOCTYPE html>
<html>
{{>head title=this.title subpage='Page X' }}

<body>
    {{>header  title=this.title}}
    <main>
        <div class="container" style="margin-top:60px;font-size: 30px; font-weight:bold">
            <a href="/product"><button type="submit">Back to Product page</button></a>
            {{#if product}}
            <div class="">
                <img src="{{product.ImgLink}}" alt="{{product.ProductName}}" style="width:100%">
                <h1>{{product.ProductName}}</h1>
                <p class="price">${{product.Price}}</p>
                <p>{{product.Information}}</p>
                <p><button>Add to Cart</button></p>
            </div>
            {{else}}
            <h1>Ko co san pham</h1>
            {{/if}}
        </div>        
    </main>
    

    {{>footer}}
</body>

</html>